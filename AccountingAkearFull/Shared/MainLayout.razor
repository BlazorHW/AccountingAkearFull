@inherits LayoutComponentBase
<MudRTLProvider RightToLeft="@Basic_Switch1">
    <MudThemeProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudLayout>
        <MudAppBar Elevation="0">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudSpacer />
            <MudSwitch @bind-Checked="@Basic_Switch1" Color="Color.Info" />
            <MudSpacer />
        </MudAppBar>

    


        <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
            <MudDrawerHeader>
                <MudText Typo="Typo.h6">AccountingAkearFull</MudText>
            </MudDrawerHeader>
            <NavMenu />
        </MudDrawer>
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</MudRTLProvider>
    @code {
        bool _drawerOpen = true;
        public bool Basic_Switch1 { get; set; } = true;

        void DrawerToggle()
        {
        _drawerOpen = !_drawerOpen;
        }
    }
